<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Community.Controls">
    <Style TargetType="{x:Type local:CrystalBall}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:CrystalBall}">
                    <Grid x:Name="PART_Grid" Background="{TemplateBinding Background}"
                            Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Height}">
                        <Grid x:Name="PART_BackgroundGrid"/>
                        <Grid x:Name="PART_MidgroundGrid"/>
                        <Grid x:Name="PART_CharacterGrid"/>
                        <Grid x:Name="PART_ForegroundGrid"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>