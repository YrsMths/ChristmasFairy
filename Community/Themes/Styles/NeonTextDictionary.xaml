<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Community.Controls">
    <Style TargetType="{x:Type local:NeonText}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:NeonText}">
                    <Grid>
                        <Path x:Name="PART_Path1" HorizontalAlignment="Center" VerticalAlignment="Center" StrokeThickness="{TemplateBinding StrokeThickness}" Stroke="{DynamicResource SecondaryLighterSolidColorBrush}">
                            <Path.Effect>
                                <DropShadowEffect Color="{DynamicResource SecondaryLighterColor}" ShadowDepth="0" BlurRadius="20" Opacity="1"/>
                            </Path.Effect>
                        </Path>
                        <Path x:Name="PART_Path2" HorizontalAlignment="Center" VerticalAlignment="Center" StrokeThickness="{TemplateBinding StrokeThickness}" Stroke="{DynamicResource PrimaryLighterSolidColorBrush}">
                            <Path.Effect>
                                <DropShadowEffect Color="{DynamicResource PrimaryLighterColor}" ShadowDepth="0" BlurRadius="20" Opacity="1"/>
                            </Path.Effect>
                        </Path>
                        <Path x:Name="PART_Path3" HorizontalAlignment="Center" VerticalAlignment="Center" StrokeThickness="{TemplateBinding StrokeThickness}" Stroke="{DynamicResource TertiaryLighterSolidColorBrush}">
                            <Path.Effect>
                                <DropShadowEffect Color="{DynamicResource TertiaryLighterColor}" ShadowDepth="0" BlurRadius="20" Opacity="1"/>
                            </Path.Effect>
                        </Path>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>